<h1><%= @artist.name %></h1>
	<%= button_to "Edit this Artist", edit_artist_path(@artist), method: :get %>
	<%= button_to "Delete this Artist", artist_path(@artist), method: :delete,
			data: { confirm: "Are you sure you'd like to delete #{@artist.name}"}%>

<h2>Songs</h2>
	<ul>
		<% @artist.songs.each do |song| %>
			<li><%= link_to song.name, song_path(song) %></li>
		<% end %>
	</ul>

<h2>Genres</h2>
	<ul>
		<% @artist.genres.each do |genre| %>
			<li><%= link_to genre.name, genre_path(genre) %></li>
		<% end %>
	</ul>